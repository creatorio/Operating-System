{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "G++ Build",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++2b",
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"../main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Clang build",
			"command": "/usr/bin/clang++-14",
			"args": [
				"-std=c++2b",
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"../main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++-14"
		}
	]
}